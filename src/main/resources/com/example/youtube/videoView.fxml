         <image>
            <Image url="@Images/icons8-play-50.png" />
         </image>
      </ImageView>
      <ImageView fx:id="pauseImg" fitHeight="41.0" fitWidth="41.0" layoutX="494.0" layoutY="213.0" onMouseClicked="#play" pickOnBounds="true" preserveRatio="true" visible="false">
         <image>
            <Image url="@Images/icons8-pause-50.png" />
         </image>
      </ImageView>
      <Label layoutX="311.0" layoutY="458.0" onMouseClicked="#nextBtnClick" prefHeight="33.0" prefWidth="116.0" text="15 second &gt;" />
      <Label layoutX="215.0" layoutY="458.0" onMouseClicked="#preBtnClick" prefHeight="33.0" prefWidth="116.0" text="10 second &lt;" />
      <ImageView fx:id="notLikedImg" fitHeight="34.0" fitWidth="33.0" layoutX="764.0" layoutY="454.0" onMouseClicked="#likeUnlikeClick" pickOnBounds="true" preserveRatio="true">
